<div class="capsule-slider-block">
    <div class="capsule-slider-inner">
        <div class="capsule-slider-top swiper">
            <div class="swiper-wrapper">
                {% if block.settings.collection_top.products.size < 3 %}
                    {% for product in block.settings.collection_top.products limit: block.settings.products_limit %}
                        <div class="swiper-slide capsule-slider-slide" data-id="{{ product.id }}">
                            <img src="{{ product.featured_image | image_url }}" alt="{{ product.featured_image.alt }}" loading="lazy">
                        </div>
                    {% endfor %}
                    {% for product in block.settings.collection_top.products limit: block.settings.products_limit %}
                        <div class="swiper-slide capsule-slider-slide" data-id="{{ product.id }}">
                            <img src="{{ product.featured_image | image_url }}" alt="{{ product.featured_image.alt }}" loading="lazy">
                        </div>
                    {% endfor %}
                {% else %}
                    {% for product in block.settings.collection_top.products limit: block.settings.products_limit %}
                        <div class="swiper-slide capsule-slider-slide" data-id="{{ product.id }}">
                            <img src="{{ product.featured_image | image_url }}" alt="{{ product.featured_image.alt }}" loading="lazy">
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            <button class="swiper-button-prev"></button>
            <button class="swiper-button-next"></button>
        </div>
        <div class="capsule-slider-bottom swiper">
            <div class="swiper-wrapper">
                {% if block.settings.collection_bottom.products.size < 3 %}
                    {% for product in block.settings.collection_bottom.products limit: block.settings.products_limit %}
                        <div class="swiper-slide capsule-slider-slide" data-id="{{ product.id }}">
                            <img src="{{ product.featured_image | image_url }}" alt="{{ product.featured_image.alt }}" loading="lazy">
                        </div>
                    {% endfor %}
                    {% for product in block.settings.collection_bottom.products limit: block.settings.products_limit %}
                        <div class="swiper-slide capsule-slider-slide" data-id="{{ product.id }}">
                            <img src="{{ product.featured_image | image_url }}" alt="{{ product.featured_image.alt }}" loading="lazy">
                        </div>
                    {% endfor %}
                {% else %}
                    {% for product in block.settings.collection_bottom.products limit: block.settings.products_limit %}
                        <div class="swiper-slide capsule-slider-slide" data-id="{{ product.id }}">
                            <img src="{{ product.featured_image | image_url }}" alt="{{ product.featured_image.alt }}" loading="lazy">
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            <button class="swiper-button-prev"></button>
            <button class="swiper-button-next"></button>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Capsule slider block",
  "tag": null,
  "settings": [
    {
        "type": "collection",
        "id": "collection_top",
        "label": "Collection top"
    },
    {
        "type": "collection",
        "id": "collection_bottom",
        "label": "Collection Bottom"
    },
    {
      "type": "range",
      "id": "products_limit",
      "min": 4,
      "max": 10,
      "step": 1,
      "label": "Products limit",
      "default": 10
    }
  ],
  "presets": [
    {
        "name": "Capsule slider block"
    }
  ]
}
{% endschema %}